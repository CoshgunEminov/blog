@model envatomarket1.Models.Entity.Blog

<h2>Delete Blog</h2>

<div>
    <h4>Are you sure you want to delete this blog?</h4>
    <div>
        <strong>Title:</strong> @Model.Title
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Date:</strong> @Model.Day.ToString("dd/MM/yyyy")
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Cancel</a>
</form>